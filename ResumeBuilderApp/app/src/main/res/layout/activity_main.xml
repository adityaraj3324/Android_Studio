<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_resume"
        android:contentDescription="Resume Logo"
        android:layout_marginBottom="20dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resume Builder"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <!-- Create New Resume Button -->
    <Button
        android:id="@+id/btnCreateResume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Resume"
        android:textSize="16sp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginBottom="15dp" />

    <!-- View Saved Resumes Button -->
    <Button
        android:id="@+id/btnViewSavedResume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Saved Resumes"
        android:textSize="16sp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginBottom="15dp" />

    <!-- Delete All Resumes Button (NEW) -->
    <Button
        android:id="@+id/btnDeleteAllResumes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete All Resumes"
        android:textSize="16sp"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginBottom="15dp" />

    <!-- Exit Button -->
    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textSize="16sp"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:padding="12dp" />

</LinearLayout>
