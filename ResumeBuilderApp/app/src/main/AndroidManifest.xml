<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.resumebuilderapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_resume"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_resume"
        android:supportsRtl="true"
        android:theme="@style/Theme.ResumeBuilderApp">

        <!-- Main Activity (Fixed: Added android:exported="true") -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity android:name=".ResumeInputActivity" android:exported="false"/>
        <activity android:name=".ResumePreviewActivity" android:exported="false"/>

    </application>
</manifest>
